#!/usr/bin/env sh

FILE="$1"
EXT="${FILE#*.}"

MIME="$(file --mime-type "$FILE")"
MIME="${MIME##* }"

if [ "$MIME" = "inode/symlink" ]; then
	FILE="$(readlink $1)"
	EXT="${FILE#*.}"

	MIME="$(file --mime-type "$FILE")"
	MIME="${MIME##* }"
fi

handle_img() {
	dir=$(realpath "$FILE")
	img_list=$(find "${dir%/*}" -type f | grep -E 'png|jpg|ico|jpeg' | grep -v "$FILE")
	img_list="$dir $img_list"
	sxiv $img_list &> /dev/null
}

handle_vid() {
	mpv "$FILE" &> /dev/null
}

handle_pdf() {
	zathura "$FILE" &> /dev/null
}

handle_txt() {
	$TERMINAL -e $EDITOR "$FILE" &> /dev/null
}

mime_based() {
	case "$MIME" in
		image/*)
			handle_img
			;;
		video/*)
			handle_vid
			;;
		text/*)
			handle_txt
			;;
		*)
			echo "Unknown Filetype"
			exit 1
			;;
	esac
}

case "$EXT" in
	png|jpg|jpeg|ico)
		handle_img
		;;
	mp4|mkv|webm|avi)
		handle_vid
		;;
	pdf)
		handle_pdf
		;;
	*)
		mime_based
		;;
esac

exit 0
