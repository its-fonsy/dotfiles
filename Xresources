! Enable a color supported XTerm
XTerm.termName: xterm-256color

! Set xterm window size
*.geometry: 150x35

xterm*locale: true
xterm*saveLinew: 4096
xterm*renderFont: true

! Set font and fontsize
.*faceName: Cascadia Mono
.*faceSize: 11

! VT Font Menu: Unreadable
.*faceSize1: 8
! VT Font Menu: Tiny
.*faceSize2: 10
! VT Font Menu: Small
.*faceSize3: 12
! VT Font Menu: Medium
.*faceSize4: 16
! VT Font Menu: Large
.*faceSize5: 22
! VT Font Menu: Huge
.*faceSize6: 24

! Theme

xterm*background: #262626
xterm*foreground: #ebdbb2
xterm*color0: #262628
xterm*color8: #928374
xterm*color1: #CC241D
xterm*color9: #fb4934
xterm*color2: #98971a
xterm*color10: #b8bb26
xterm*color3: #FF8F15
xterm*color11: #FFAF00
xterm*color4: #458588
xterm*color12: #83a598
xterm*color5: #b16286
xterm*color13: #d3869b
xterm*color6: #689d6a
xterm*color14: #8ec07c
xterm*color7: #a89984
xterm*color15: #ebdbb2

! Scrollbar
*.scrollBar: false

! Do not scroll when there is new input
*.scrollTtyOutput: false

! Scrolling by using Shift-PageUp / Shift-PageDown or mousewheel by default ##
! Lines of output you can scroll back over
*.saveLines: 15000

! Enable copy/paste hotkeyes (mouse highlight = copy ,  shift+Insert = paste)
*.selectToClipboard: true

! Select text
*.highlightSelection: true
! Remove trailing spaces
*.trimSelection: true

! Keybindings
*.translations: #override \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

*.background: black
*.foreground: white
