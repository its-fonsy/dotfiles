! Enable a color supported XTerm
XTerm.termName: xterm-256color

! Set xterm window size
*.geometry: 150x35

xterm*locale: true
xterm*saveLinew: 4096
xterm*renderFont: true

! Set typeface and size
.*faceName: Iosevka:antialias=true:scalable=true:spacing=mono
.*faceSize: 12

! Diffferent typeface size
.*faceSize1: 8
.*faceSize2: 10
.*faceSize3: 12
.*faceSize4: 16
.*faceSize5: 22
.*faceSize6: 24

! Colorscheme
xterm*background:      #0d1117
xterm*foreground:      #ffffff

!xterm*color0:  #000000
!xterm*color8:  #555555
!xterm*color1:  #cc0000
!xterm*color9:  #ef2929
!xterm*color2:  #008000
!xterm*color10: #4e9a06
!xterm*color3:  #c4a000
!xterm*color11: #fce94f
!xterm*color4:  #0040dd
!xterm*color12: #729fcf
!xterm*color5:  #75507b
!xterm*color13: #ad7fa8
!xterm*color6:  #06989a
!xterm*color14: #34e2e2
!xterm*color7:  #d3d7cf
!xterm*color15: #eeeeec

! Scrollbar
*.scrollBar: false

! Do not scroll when there is new input
*.scrollTtyOutput: false

! Scrolling by using Shift-PageUp / Shift-PageDown or mousewheel by default ##
! Lines of output you can scroll back over
*.saveLines: 15000

! Enable copy/paste hotkeyes (mouse highlight = copy ,  shift+Insert = paste)
*.selectToClipboard: true

! Select text
*.highlightSelection: true
! Remove trailing spaces
*.trimSelection: true

! Keybindings
*.translations: #override \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
