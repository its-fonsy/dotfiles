! Enable a color supported XTerm
XTerm.termName: xterm-256color

! Set xterm window size
*.geometry: 150x35

! Set font and fontsize
.*faceName: Ubuntu Mono
.*faceSize: 12

! VT Font Menu: Unreadable
.*faceSize1: 8
! VT Font Menu: Tiny
.*faceSize2: 10
! VT Font Menu: Small
.*faceSize3: 12
! VT Font Menu: Medium
.*faceSize4: 16
! VT Font Menu: Large
.*faceSize5: 22
! VT Font Menu: Huge
.*faceSize6: 24

! Theme

*background: #000000
*foreground: #ffffff
*accent_light: #82b0ec
*accent: #79a8ff
*accent_darker: #2fafff
*accent_dark: #338fff

*color0: #000000
*color1: #ff5f59
*color2: #44bc44
*color3: #d0bc00
*color4: #2fafff
*color5: #feacd0
*color6: #00d3d0
*color7: #ffffff

*color8: #1e1e1e
*color9: #ff5f5f
*color10: #44df44
*color11: #efef00
*color12: #338fff
*color13: #ff66ff
*color14: #00eff0
*color15: #ffffff

! Scrollbar
*.scrollBar: false

! Do not scroll when there is new input
*.scrollTtyOutput: false

! Scrolling by using Shift-PageUp / Shift-PageDown or mousewheel by default ##
! Lines of output you can scroll back over
*.saveLines: 15000

! Enable copy/paste hotkeyes (mouse highlight = copy ,  shift+Insert = paste)
*.selectToClipboard: true

! Select text
*.highlightSelection: true
! Remove trailing spaces
*.trimSelection: true

! Keybindings
*.translations: #override \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

*.background: black
*.foreground: white
