# i3status configuration file.

general {
        colors = true
        interval = 5
}

order += "ethernet _first_"
order += "volume master"
order += "tztime local"

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

volume master {
		format = "A: %volume"
		format_muted = "V: muted (%volume)"
		device = "pulse"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
