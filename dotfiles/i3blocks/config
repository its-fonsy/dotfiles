
# Global properties
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15
markup=none
color=#FFFFFF

# Network interface monitoring
[iface]
command=$SCRIPT_DIR/iface/iface
label=NET
color=#00FF00
interval=10

# Memory usage
[memory]
command=$SCRIPT_DIR/memory/memory
label=MEM 
separator=false
interval=30

# Disk usage
[nvme_disk]
label=DISK 
dir=/
interval=30
command=$SCRIPT_DIR/disk/disk

# CPU usage
# dependecies: mpstat
[cpu]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
interval=10
label=CPU 
T_WARN=60
T_CRIT=80
DECIMALS=2
COLOR_NORMAL=#FFFFFF
COLOR_WARN=#FFFC00
COLOR_CRIT=#FF0000

# Temperature
# dependecies: lm-sensors
[temperature]
command=$SCRIPT_DIR/temperature/temperature
label=TEMP 
interval=10

# Keyboard Layout
# dependecies: setxkbmap
[key_layout]
command=$SCRIPT_DIR/key_layout/key_layout && echo
label=KB 
interval=1

# Date Time
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
