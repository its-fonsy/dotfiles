general {
        output_format = "i3bar"
        colors = true
        interval = 5
		separator = " | "
}

order += "wireless wlp3s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "wifi: %essid (%ip)"
        format_down = "wifi: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

cpu_temperature 0 {
        format = "cpu: %degrees Â°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}
